# Sanity CMS Configuration
# Get these values from your Sanity project dashboard at https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-04-17

# Sanity API Tokens (optional, for live preview features)
# SANITY_API_READ_TOKEN=your_read_token_here
# NEXT_PUBLIC_SANITY_API_BROWSER_TOKEN=your_browser_token_here

# Staging Environment Authentication
# Set a secure password for the staging environment (distanzrunning.vercel.app)
STAGING_PASSWORD=your_secure_password_here

# Authentication Secret
# Generate a random string for signing cookies: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# Google Tag Manager (optional)
# GTM_ID=GTM-XXXXXXX

# Preview Mode (optional)
# Set to 'true' to disable navbar/footer for preview pages
# PREVIEW_MODE=false

# Mapbox
# Get your access token from https://account.mapbox.com/
# Required for: race guide maps, instagram post generator (/instagram-post)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Mailgun (for contact form and newsletter)
# Get these from your Mailgun dashboard at https://app.mailgun.com/
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_API_BASE_URL=https://api.mailgun.net

# Base URL (for newsletter confirmation links)
# Set to your production domain
NEXT_PUBLIC_BASE_URL=https://distanzrunning.com

# PostHog Analytics
# Get your project API key from PostHog project settings
NEXT_PUBLIC_POSTHOG_KEY=phc_M6a7zUXkuiQS774jOBcGh69ykJPyXPIsvtgBIrt5ZfK
